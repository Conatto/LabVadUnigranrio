@{
    Layout = "~/Views/Shared/Sessao.cshtml";
}

<head>
    <script src="~/Scripts/_JavaScript/jquery-3.4.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <title> @ViewBag.Title </title>
    <link rel="stylesheet" type="text/css" href="..\..\Scripts\_fullCalendar\core\main.css" />
    <link rel="stylesheet" type="text/css" href="..\..\Scripts\_fullCalendar\daygrid\main.css" />
    <link rel="stylesheet" type="text/css" href="..\..\Scripts\_fullCalendar\timegrid\main.css" />
    <link rel="stylesheet" type="text/css" href="..\..\Scripts\_fullCalendar\list\main.css" />
    <link rel="stylesheet" type="text/css" href="..\..\Scripts\_fullCalendar\bootstrap\main.css" />
    <link href="~/Content/Home.css" rel="stylesheet" />
    <link href="~/Content/bulma.css" rel="stylesheet" />
    <!--<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">-->

    <link rel="stylesheet" type="text/css" href="..\..\Content\bootstrap.min.css" />
    <link href='https://use.fontawesome.com/releases/v5.0.6/css/all.css' rel='stylesheet'>
    <script src="~/Scripts/_fullCalendar/core/main.js"></script>
    <script src="~/Scripts/_ace/src/ace.js"></script>
    <script src="~/Scripts/_fullCalendar/interaction/main.js"></script>
    <script src="~/Scripts/_fullCalendar/core/locales/pt-br.js"></script>
    <script src="~/Scripts/_fullCalendar/bootstrap/main.js"></script>
    <script src="~/Scripts/_fullCalendar/daygrid/main.js"></script>
    <script src="~/Scripts/_fullCalendar/timegrid/main.js"></script>
    <script src="~/Scripts/_fullCalendar/list/main.js"></script>

    <script src="~/Scripts/_JavaScript/funcoes.js"></script>
</head>

<body id="Home">
    <div id="container">
        <nav aria-label="main navigation">
            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="barraMenu">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
            <div id="barraMenu" class="Menu columns">
                <div class="Menu column is-2"><img id="logo" src="~/Content/_imagens/logo.png" /></div>
                <div id="" class="column columns is-offset-4 is-narrow">
                    <a class="LinkMenu White Menu-item" id="btn0" href="#">Ajuda</a>
                    <a class="LinkMenu White Menu-item" id="btn1" href="#">Agendamento</a>
                    <a class="LinkMenu White Menu-item" id="btn2" href="#">Execução</a>
                    <a class="LinkMenu White Menu-item" id="btn3" href="#">Minha Conta</a>

                    <a class="LinkMenu White Menu-item" id="btn4" href="@Url.Action("Logoff", "Home")">Sair</a>
                </div>
                <div class="column is-1 Box navbar-item">
                    <span class="tag is-large is-warning column Noturno">Modo Noturno</span>
                    <label class="Switch">
                        <input type="checkbox" name="botaoNoturno" onclick="AlterarCorDeFundo()" />
                        <span class="Slider"></span>
                    </label>
                </div>
            </div>
        </nav>

        <div class="Interface">
            <div id="Conteudo" class="carousel slide">
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        @Html.Action("Ajuda")
                    </div>
                    <div class="item">
                        @Html.Action("Agendamento")
                    </div>
                    <div class="item">
                        @Html.Action("AgendDia")
                    </div>
                    <div class="item">
                        @Html.Action("Execucao")
                    </div>
                    <div class="item">
                        @Html.Action("MinhaConta")
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

